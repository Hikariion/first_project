<view class="products_warp">
    <!-- 上部：展示 -->
    <view style="background-color:#fff;">
      <swiper autoplay indicator-dots circular>
        <swiper-item wx:for="{{swiperList}}" wx:key="{{index}}">
          <navigator>
            <p1>{{item}}</p1>
            <!-- <image> -->
          </navigator>
        </swiper-item>
      </swiper>
    </view>


    <!-- 下部：产品列表 -->
    <view class="products_list">
        <!-- 功能一,url是用来跳转页面的 -->
        <navigator 
        url="/pages/trade/trade"
        class="products_item">
            <view class="product_shower">
                <image class="gongneng1_logo" src="../../assets/trade.png"/>
                <h1>二手交易</h1>
            </view>
        </navigator>

        <!-- 功能二.url是用来跳转页面的 -->
        <navigator 
        url="/pages/advertisement/advertisement"
        class="products_item">
            <view class="product_shower">
                <image class="gongneng2_logo" src="../../logo/logo.jpg"/>
                <h1>功能二</h1>
            </view>  
        </navigator>
    </view>
</view>