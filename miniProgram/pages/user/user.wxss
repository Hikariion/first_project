page{
    background-color: rgb(240, 236, 236);
}
.container{
    padding: 10rpx;
}
.unlogin_wrap{
    background-color: #fff;
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: center;
}
.click_login{
    width: 40%;
    margin: auto;
}
.logined_wrap{
    width: 100%;
}
.user_info{
    background-color: #fff;
    display: flex;
    width: 100%;
    margin-bottom: 20rpx;
    justify-content: space-between;
}
.avator_wrap{
    display: flex;
    flex: 3;
    justify-content: center;
    align-items: center;
}
.avator_wrap image{
   padding:10rpx;
   width: 100%;
   max-height: 200rpx;
}
.user_detail{
    display: flex;
    flex:5;
    flex-direction: column;
    justify-content: space-around;
}
.more{
    display: flex;
    flex:1;
    justify-content: center;
    align-items: center;
}
.more image{
    width:30%;
    max-height: 50rpx;
}

.function_list{
    background-color: #fff;
    border-bottom:  0.1rpx solid rgb(189, 189, 189);
    display: flex;
    width: 100%;
    height: 100rpx;
    justify-content: center;
    align-items: center;
}
.title{
    margin-left: 20rpx;
    flex:8;
}
