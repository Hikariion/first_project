/* pages/comment/comment.wxss */
.comment_wrap{
    width:100%;
}
.comment_content{
    display:flex;
    padding:10rpx;
    height: 130rpx;
    border-bottom:  0.1rpx solid rgb(189, 189, 189);
    justify-content: space-around;
}
.avatar_wrap{
    display: flex;
    flex:2;
    justify-content: center;
    align-items: center;
}
.avatar{
    width:100%;
    height: 90%;
}
.comment_info{
    display: flex;
    flex:8;
 
    margin-left:20rpx;
    flex-direction: column;
    justify-content: space-around;
}
.username{
    font-size:28rpx;
    color:#6666;
}
.comment_text{
    font-size:40rpx;
}
.comment_date{
    font-size:28rpx;
    color:#6666;
}